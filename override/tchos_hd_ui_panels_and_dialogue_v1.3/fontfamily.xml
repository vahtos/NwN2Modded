		<UIFontItalic		font="ui\\default\\fonts\\NWN2_MainI.ttf"	pointsize=15 dropshadows=true outline=true />
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_MainBI.ttf"	pointsize=15 dropshadows=true outline=true />
	</UIFontFamily>

	<UIFontFamily name="Floating_Text_Special" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=16 dropshadows=true outline=true />
		<UIFontBold			font="ui\\default\\fonts\\NWN2_MainB.ttf"	pointsize=16 dropshadows=true outline=true />
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_MainI.ttf"	pointsize=16 dropshadows=true outline=true />
