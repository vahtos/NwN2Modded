	<!-- Default Font: the name of this font family CANNOT change.  This is also the font used by the chat window. US/EN -->
	<UIFontFamily name="Default" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=16 dropshadows=false outline=false />
		<UIFontBold			font="ui\\default\\fonts\\NWN2_MainB.ttf"	pointsize=16 dropshadows=false outline=false />
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_MainI.ttf"	pointsize=16 dropshadows=false outline=false />
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_MainBI.ttf"	pointsize=16 dropshadows=false outline=false />
	</UIFontFamily>

	<!-- This is the font used by the NWN1 Dialog system and various other screens as well-->
	<UIFontFamily name="NWN1_Dialog" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=18 dropshadows=false outline=false />
		<UIFontBold			font="ui\\default\\fonts\\NWN2_MainB.ttf"	pointsize=18 dropshadows=false outline=false />
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_MainI.ttf"	pointsize=18 dropshadows=false outline=false />
