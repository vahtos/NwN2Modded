		<UIFontNormal		font="ui\\default\\fonts\\ARIALUNI.TTF"	pointsize=12 dropshadows=false outline=false />
		<UIFontBold			font="ui\\default\\fonts\\ARIALUNI.TTF"	pointsize=12 dropshadows=false outline=false />
		<UIFontItalic		font="ui\\default\\fonts\\ARIALUNI.TTF"	pointsize=12 dropshadows=false outline=false />
		<UIFontBoldItalic	font="ui\\default\\fonts\\ARIALUNI.TTF"	pointsize=12 dropshadows=false outline=false />
	</UIFontFamily>

	<!-- This font family is used for Buttons and Titles throughout the UI
		1.Title Bold 12pt, drop+outline
		2.Title Bold 14pt, drop+outline
		3.Title Bold 12pt, drop
		4.Title Bold 14pt, drop -->
	<UIFontFamily name="Title_Font" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_TitleB.ttf" pointsize=15 dropshadows=true outline=true />  
		<UIFontBold			font="ui\\default\\fonts\\NWN2_TitleB.ttf" pointsize=17 dropshadows=true outline=true />	
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_TitleB.ttf" pointsize=15 dropshadows=true outline=false />	
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_TitleB.ttf" pointsize=17 dropshadows=true outline=false />
	</UIFontFamily>

	<!-- This font family is used for numeric data for the UI
		1.Title Bold 12pt, drop+outline
		2.Title Bold 14pt, drop+outline
		3.Title Bold 12pt, drop
		4.Title Bold 14pt, drop
	-->
	<UIFontFamily name="Body_Font" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_MainB.ttf" pointsize=15 dropshadows=false outline=true />
		<UIFontBold			font="ui\\default\\fonts\\NWN2_MainB.ttf" pointsize=17 dropshadows=false outline=true />
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_MainB.ttf" pointsize=15 dropshadows=true  outline=false />
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_MainB.ttf" pointsize=17 dropshadows=true  outline=false />
	</UIFontFamily>

	<UIFontFamily name="Special_Font" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=15 dropshadows=false outline=true />	<!-- quick spell font (hotbar buttons 10 outline) -->
		<UIFontBold			font="ui\\default\\fonts\\NWN2_MainB.ttf"	pointsize=20 dropshadows=false outline=true />	<!-- used for raid notice text -->
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=15 dropshadows=false outline=false />	<!-- mini map and others -->
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_TitleB.ttf"	pointsize=24 dropshadows=false outline=true />	<!-- large page headers (24 bold)-->
	</UIFontFamily>

	<UIFontFamily name="Special_Font_2" >
		<UIFontNormal		font="ui\\default\\fonts\\NWN2_TitleB.ttf"	pointsize=15 dropshadows=true outline=false />	<!-- used for concentration -->
		<UIFontBold			font="ui\\default\\fonts\\NWN2_Main.ttf"	pointsize=16 dropshadows=false outline=true />	<!-- target frames -->
		<UIFontItalic		font="ui\\default\\fonts\\NWN2_TitleB.ttf"	pointsize=16 dropshadows=false outline=false />	<!-- PartyChat -->
		<UIFontBoldItalic	font="ui\\default\\fonts\\NWN2_TitleB.ttf"	pointsize=12 dropshadows=false outline=false />	<!-- Smaller Version of 3-->
	</UIFontFamily>

